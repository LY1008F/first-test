<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yu.mapper.EmployeeMapper">
    <!--根据id查询用户-->
<select id="selectById" parameterType="int" resultType="Employee">
select id,lastName,email,gender
from tbl_employee
where id=#{id}
</select>

    <select id="getMapById" parameterType="int" resultType="Empoloyee">
    select *
from tbl_employee
    where id=#{id}

    </select>
<!--查询所有用户-->
    <select id="selectAll" resultType="Employee">
select id,lastName,email,gender
from tbl_employee

    </select>
<!--添加用户-->
    <insert id="addEmployee" parameterType="Employee">
        insert into tbl_employee(lastName,email,gender)
        values (#{lastName},#{email},#{gender})
    </insert>
    <!--删除用户-->
    <delete id="deleteEmployee" parameterType="int">
        delete from tbl_employee where id=#{id}
    </delete>
    <!--修改用户-->
    <update id="updateEmployee" parameterType="Employee">
        update tbl_employee
        set lastName=#{lastName},email=#{email},gender=#{gender}

    </update>

</mapper>